#!/bin/sh

# This script is meant to be run by deluge on torrent completion.
# It will trigger a library update in XBMC if it has a HTTP api running
# ah XBMC_HOST:XBMC_PORT

XBMC_HOST=vela
XBMC_PORT=8080

torrent_id=$1
torrent_name=$2
torrent_path=$3

exec /usr/bin/curl "http://${XBMC_HOST}:${XBMC_PORT}/xbmcCmds/xbmcHttp?command=ExecBuiltIn&parameter=XBMC.updatelibrary(video)" -f --retry 3 -m 10 -s > /dev/null
